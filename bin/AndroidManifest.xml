<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myhealthy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.yin.myhealthy.HealthyApplication" 
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yin.myhealthy.view.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.yin.myhealthy.MainActivity" />
        <activity android:name="com.yin.myhealthy.view.NewsContextActivity" />
        <activity android:name="com.yin.myhealthy.view.DietContextActivity" />
        <activity android:name="com.yin.myhealthy.view.MedicineContextActivity" />
        <activity android:name="com.yin.myhealthy.view.KnowledgeContextActivity" />
        
    </application>

</manifest>
