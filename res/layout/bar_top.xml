<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <!-- News页面导航条 -->

    <LinearLayout
        android:id="@+id/ll_topbar_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioGroup
                android:id="@+id/rg_topbar_news"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" >

                <RadioButton
                    android:id="@+id/rb_topbar_news_1"
                    style="@style/radioButton"
                    android:checked="true"
                    android:text="企业要闻" />

                <RadioButton
                    android:id="@+id/rb_topbar_news_2"
                    style="@style/radioButton"
                    android:text="医疗新闻" />

                <RadioButton
                    android:id="@+id/rb_topbar_news_3"
                    style="@style/radioButton"
                    android:text="生活贴士" />

                <RadioButton
                    android:id="@+id/rb_topbar_news_4"
                    style="@style/radioButton"
                    android:text="药品新闻" />

                <RadioButton
                    android:id="@+id/rb_topbar_news_5"
                    style="@style/radioButton"
                    android:text="食品新闻" />

                <RadioButton
                    android:id="@+id/rb_topbar_news_6"
                    style="@style/radioButton"
                    android:text="社会热点" />

                <RadioButton
                    android:id="@+id/rb_topbar_news_7"
                    style="@style/radioButton"
                    android:text="疾病快讯" />
            </RadioGroup>
        </HorizontalScrollView>
    </LinearLayout>
    
    
    
     <!-- Diet页面导航条 -->

    <LinearLayout
        android:id="@+id/ll_topbar_diet"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioGroup
                android:id="@+id/rg_topbar_diet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" >

                <RadioButton
                    android:id="@+id/rb_topbar_diet_1"
                    style="@style/radioButton"
                    android:checked="true"
                    android:text="亮发" />

                <RadioButton
                    android:id="@+id/rb_topbar_diet_2"
                    style="@style/radioButton"
                    android:text="健脑" />

                <RadioButton
                    android:id="@+id/rb_topbar_diet_3"
                    style="@style/radioButton"
                    android:text="温肺" />

                <RadioButton
                    android:id="@+id/rb_topbar_diet_4"
                    style="@style/radioButton"
                    android:text="有益心血管" />

                <RadioButton
                    android:id="@+id/rb_topbar_diet_5"
                    style="@style/radioButton"
                    android:text="明目" />

                <RadioButton
                    android:id="@+id/rb_topbar_diet_6"
                    style="@style/radioButton"
                    android:text="益乳" />

                <RadioButton
                    android:id="@+id/rb_topbar_diet_7"
                    style="@style/radioButton"
                    android:text="健脾" />
                
                
                
            </RadioGroup>
        </HorizontalScrollView>
    </LinearLayout>
    
    
    

</LinearLayout>